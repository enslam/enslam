<?xml version="1.0"?>
<configuration>
  <facilities>
    <facility
      id="activerecord.facility"
      type="Castle.Facilities.ActiveRecordIntegration.ActiveRecordFacility, Castle.Facilities.ActiveRecordIntegration"
      isDebug="true"
      isWeb="true"
      pluralizeTableNames ="true">

      <!-- Configure the namespaces for the models using Active Record Intergration -->
      <assemblies>
        <item>Enslam.Site</item>
      </assemblies>

      <config>
        <add key="connection.driver_class" value="NHibernate.Driver.SqlClientDriver" />
        <add key="dialect"                 value="NHibernate.Dialect.MsSql2000Dialect" />
        <add key="connection.provider"     value="NHibernate.Connection.DriverConnectionProvider" />
        <add key="connection.connection_string" value="Data Source=.;Initial Catalog=Enslam;Integrated Security=SSPI" />
        <add key="proxyfactory.factory_class" value="NHibernate.ByteCode.Castle.ProxyFactoryFactory, NHibernate.ByteCode.Castle" />
      </config>
    </facility>

    <facility
      id="logging.facility"
      type="Castle.Facilities.Logging.LoggingFacility, Castle.Facilities.Logging"
      loggingApi="log4net"
      configFile="Configuration\\log4net.config" />
<!--
    <facility
      id="atm.facility"
      type="Castle.Facilities.AutomaticTransactionManagement.TransactionFacility, Castle.Facilities.AutomaticTransactionManagement" />
-->
  </facilities>
</configuration>
